<!-- みんなのレシピ(ジャンル別） -->
<%= render 'layouts/list' %>

<main class="login-time-box">
<h1>みんなのレシピ(ジャンル別)</h1>


    <div class="basic-box">
	<h3><span class="label label-default">～お肉系のおかず～</span></h3>

                <% @everyone.each do |m| %>
                <div class="my_recipe-box clearfix">
    	    		<div class="my_recipe-box-left">
			    		<div class="my_recipe-image">
			    			<%= link_to(admin_my_recipe_path(m.id)) do %>
			    			<p><%= attachment_image_tag m, :cooking_image, fallback: "/images/no_image.png", class: "my_recipe-image" %></p>
			    			<% end %>
			    			<p><u><b><%= link_to m.user.nickname, admin_user_path(m.user_id) %></b></u></p>
			    		</div><br>
			    	</div>
			    	<div class="my_recipe-box-right">
			    		<p><span><u><b><%= link_to m.cooking_name, admin_my_recipe_path(m.id) %></b></u></span>
			    		<span><%= m.genre.genre_name %></span></p>
			    		<p><%= m.cooking_explanation %></p><br>
			    		<% if m.publishment == true %>
			    	      <p class="flash-notice">※このレシピは公開されています</p>
			    	    <% else %>
			    	      <p class="flash-warning">※このレシピは非公開です</p>
			    	    <% end %>
				    		<p><%= link_to 'このレシピの作り方を見る', admin_my_recipe_path(m.id), class: 'btn btn-primary' %></p>
			    	</div>
			    </div>
                <% end %>

            <div class="paginate">
                <%= paginate @pages, class: "paginate" %>
            </div>

	<div class="">
        <%= link_to '戻る', :back, class: 'btn btn-default btn-lg' %>
    </div><br>
    </div>
</main>

</div>
</div>
</div>