<!-- マイレシピ(管理者側) -->
<%= render 'layouts/list' %>

<main class="login-time-box">
<h1>マイレシピ</h1>


    <div class="basic-box">
	<h3><span class="label label-default"><%= @user.nickname %>さんのマイレシピ</span></h3>

                <% @pages.each do |m| %>
                <div class="my_recipe-box clearfix">
    	    		<div class="my_recipe-box-left">
			    		<div class="my_recipe-image">
			    			<%= link_to(admin_my_recipe_path(m.id)) do %>
			    			<p><%= attachment_image_tag m, :cooking_image, fallback: "no_image.png", class: "my_recipe-image" %></p>
			    			<% end %>
				    		<p><%= link_to 'このレシピの詳細を見る', admin_my_recipe_path(m.id), class: 'btn btn-primary' %></p>
			    		</div><br>
			    	</div>
			    	<div class="my_recipe-box-right">
			    		<p><%= m.cooking_name %></p>
			    		<p><%= m.genre_name %></p>
			    		<p><%= m.cooking_explanation %></p>
			    		<p><%= m.user.nickname %></p>
			    		<% if m.publishment == true %>
			    	      <p class="flash-notice">※このレシピは公開されています</p>
			    	    <% else %>
			    	      <p class="flash-warning">※このレシピは非公開です</p>
			    	    <% end %>
			    	</div>
			    </div>
                <% end %>

            <div class="paginate">
                <%= paginate @pages, class: "paginate" %>
            </div>

    <div class="">
        <%= link_to '作りたい料理リスト', admin_want_to_cook_path(@user.id), class: 'btn btn-default btn-lg' %>
    </div><br>
    </div>
</main>

</div>
</div>
</div>