

<!-- 基本のレシピ(ジャンル別）(管理者側) -->
<%= render 'layouts/list' %>

<main class="login-time-box">
<h1>基本のレシピ(ジャンル別)</h1>


    <div class="basic-box">
	<h3><span class="label label-default">～魚介系のおかず～</span></h3>

                <% @basic.each do |m| %>
                <div class="my_recipe-box clearfix">
    	    		<div class="my_recipe-box-left">
			    		<div class="my_recipe-image">
			    			<%= link_to(admin_basic_recipe_path(m.id)) do %>
			    			<p><%= attachment_image_tag m, :cooking_image, fallback: "no_image.png", class: "my_recipe-image" %></p>
			    			<% end %>
				    		<p><%= link_to 'このレシピの作り方を見る', admin_basic_recipe_path(m.id), class: 'btn btn-primary' %></p>
			    		</div><br>
			    	</div>
			    	<div class="my_recipe-box-right">
			    		<p><span><u><b><%= link_to m.cooking_name, admin_basic_recipe_path(m.id) %></b></u></span>
			    		<span><%= m.genre.genre_name %></span></p>
			    		<p><%= m.cooking_explanation %></p><br>
			    	</div>
			    </div>
                <% end %>

            <div class="paginate">
                <%= paginate @pages, class: "paginate" %>
            </div>

	<div class="">
        <%= link_to 'ジャンルの選択へ戻る', :back, class: 'btn btn-default btn-lg' %>
    </div><br>
    </div>
</main>

</div>
</div>
</div>